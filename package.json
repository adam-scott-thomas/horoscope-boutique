{
  "name": "horoscope-boutique",
  "version": "1.0.0",
  "description": "Production-ready horoscope subscription service on Cloudflare infrastructure",
  "main": "src/worker.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "db:create": "wrangler d1 create horoscope-boutique-db",
    "db:execute": "wrangler d1 execute horoscope-boutique-db --file=./schema.sql",
    "db:query": "wrangler d1 execute horoscope-boutique-db --command",
    "pages:dev": "wrangler pages dev public",
    "pages:deploy": "wrangler pages deploy public --project-name=horoscope-boutique",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.js' 'public/**/*.js'",
    "format:check": "prettier --check 'src/**/*.js' 'public/**/*.js'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "horoscope",
    "astrology",
    "cloudflare-workers",
    "cloudflare-pages",
    "d1",
    "sms",
    "email",
    "subscription",
    "daily"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "vitest": "^2.0.0",
    "wrangler": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
